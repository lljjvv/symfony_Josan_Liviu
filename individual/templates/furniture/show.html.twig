{% extends 'base.html.twig' %}

{% block title %}Furniture
{% endblock %}

{% block body %}
	<h1 class="text-center">Furniture</h1>
	<div class="">
		<div class="row">
			<div class="col-md-2"></div>
			<div class="col-md-8">
				<table class="table table-striped table-bordered">
					<thead class="thead-dark">
						<tr>
							<th class="text-center" scope="col">Id</th>
							<th class="text-center" scope="col">Name</th>
							<th class="text-center" scope="col">Price</th>
							<th class="text-center" style="width: 30%" scope="col">Action</th>
						</tr>
					</thead>
					<tbody>
						<tr>
							<th class="text-center" scope="row">{{ furniture.id }}</th>
							<td class="text-center">{{ furniture.name }}</td>
							<td class="text-center">{{ furniture.price }}</td>
							<td class="text-center">
								{{ include('furniture/_delete_form.html.twig') }}
							</td>
						</tr>
					</tbody>
				</table>
			</div>
			<div class="col-md-2"></div>
		</div>

		<div class="row form-group">
			<div class="col-md-2"></div>
			<div class="col-md-2">
				<a style="margin-left: 11px;" class="btn btn-info form-control" href="{{ path('furniture_index') }}">Back to products</a>
			</div>
		</div>
	</div>
{% endblock %}
